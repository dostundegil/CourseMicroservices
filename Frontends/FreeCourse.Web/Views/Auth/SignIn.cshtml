@model FreeCourse.Web.Models.SigninInput
@{
    ViewData["Title"] = "SignIn";
}
<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Üye Giriş</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="SignIn" method="post">
                    <div class="form-group">
                        <label asp-for="Email" for="exampleInputEmail1"></label>
                        <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Mailinizi Giriniz">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" for="exampleInputPassword1"></label>
                        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Şifre">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div> 
                    <div class="form-check">
                        <input type="checkbox" asp-for="IsRemember" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" asp-for="IsRemember" for="exampleCheck1"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>
</div>


